{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "paths": {
      "actions": [
        "./client/actions/index.ts"
      ],
      "components": [
        "./client/components/index.ts"
      ],
      "decorators": [
        "./client/decorators/index.ts"
      ],
      "reducers": [
        "./client/reducers/index.ts"
      ],
      "routes": [
        "./client/routes/index.ts"
      ],
      "store": [
        "./client/store/index.ts"
      ],
      "types": [
        "./client/types/index.ts"
      ],
      "utils": [
        "./client/utils/index.ts"
      ]
    }
  },
  "exclude": [
    "./node_modules/*"
  ]
}